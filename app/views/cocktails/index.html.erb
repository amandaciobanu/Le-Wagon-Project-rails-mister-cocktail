<div class="banner">
  <div class="banner-content">
    <h1>Welcome to Amanda's Cocktails app</h1>
    <p>Features beautifully presented cocktail recipes that youâ€™ll love</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-info btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="feature">
    <h2>Featured Cocktails</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% if cocktail.photo.attached? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <% else %>
          <div class="card">
        <% end %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>